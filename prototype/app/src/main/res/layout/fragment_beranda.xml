<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"/>

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Sesuaikan Liburan anda"
        android:background="@color/buttonColor"
        android:textSize="25dp"
        android:textColor="@color/white"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/datePickerLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_weight="2"
        android:weightSum="3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:src="@drawable/calendar_schedule"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih tanggal liburan anda"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                />
            <EditText
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/tanggalMulai"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20/2/2020"
                android:textSize="25dp"
                android:textAlignment="center"
                android:clickable="false"
                android:editable="false"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:text="sampai"
                android:textAlignment="center"
                android:textSize="15dp" />
            <EditText
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tanggalAkhir"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21/2/2020"
                android:textSize="25dp"
                android:textAlignment="center"
                android:clickable="false"
                android:editable="false"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePickerLinear"
        android:layout_margin="20dp"
        android:background="@drawable/button_search"
        android:text="Cari"
        android:textColor="@color/white"
        android:textSize="20dp"
        />
</RelativeLayout>











</LinearLayout>